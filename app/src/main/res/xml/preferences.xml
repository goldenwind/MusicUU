<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout="@layout/preference_item"
    android:title="@string/title_activity_setting">
    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="个性化设置">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/check_update"
            android:layout="@layout/preference_item"
            android:summaryOff="自动开启已关闭(默认)"
            android:summaryOn="目前已开启自动更新"
            android:title="自动检测更新" />
        <EditTextPreference
            android:defaultValue="musicuu"
            android:key="@string/save_path"
            android:layout="@layout/preference_item"
            android:summary="默认保存在SD卡musicuu文件夹下"
            android:title="下载路径" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="帮助">
        <Preference
            android:layout="@layout/preference_item"
            android:title="关于">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.pgyer.com/musicuu" />
        </Preference>

        <Preference
            android:layout="@layout/preference_item"
            android:title="手动检查更新">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.pgyer.com/musicuu" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="作者">
        <Preference
            android:layout="@layout/preference_item"
            android:title="qtfreet00">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://weibo.com/u/3552577720" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>